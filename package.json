{
  "name": "@vuepress/ecosystem",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r --stream build && pnpm build:copy && pnpm build:style",
    "build:copy": "pnpm --parallel --stream copy",
    "build:style": "pnpm --parallel --stream style",
    "bundle": "cross-env pnpm clean && pnpm build:copy && pnpm build:style && cross-env NODE_ENV=production pnpm -r --stream build",
    "clean": "pnpm --parallel --stream clean",
    "format": "oxfmt",
    "lint": "oxlint --fix --type-aware --type-check --report-unused-disable-directives --deny-warnings && oxfmt && stylelint **/*.{css,html,scss,vue} --fix",
    "lint:check": "oxlint --type-aware --type-check --report-unused-disable-directives --deny-warnings && oxfmt --check && stylelint **/*.{css,html,scss,vue}",
    "prepare": "husky",
    "release": "pnpm release:check && pnpm release:version && pnpm release:publish",
    "release:check": "pnpm lint && pnpm clean && pnpm bundle && pnpm test",
    "release:publish": "lerna publish --dist-tag next from-package --yes && node --experimental-strip-types scripts/syncNpmmirror.ts",
    "release:version": "lerna version",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:cov": "cross-env TZ=Etc/UTC vitest run --coverage ",
    "test:e2e": "pnpm --filter ecosystem-e2e e2e:dev && pnpm --filter ecosystem-e2e e2e:build",
    "test:unit": "cross-env TZ=Etc/UTC vitest run",
    "type:check": "tsc --noEmit"
  },
  "nano-staged": {
    "**/*": "oxfmt --no-error-on-unmatched-pattern",
    "*.{cjs,js,ts,vue}": "oxlint --fix --type-aware --type-check --deny-warnings --report-unused-disable-directives",
    "*.{css,scss,html,vue}": "stylelint --fix",
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@lerna-lite/cli": "^4.11.3",
    "@lerna-lite/publish": "^4.11.3",
    "@types/node": "^25.3.1",
    "@types/webpack-env": "^1.18.8",
    "@vitest/coverage-istanbul": "4.0.18",
    "cpx2": "^8.0.0",
    "cross-env": "^10.1.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "oxfmt": "0.35.0",
    "oxlint": "1.50.0",
    "oxlint-tsgolint": "0.15.0",
    "postcss-html": "^1.8.1",
    "publint": "^0.3.17",
    "rimraf": "^6.1.3",
    "sass-embedded": "catalog:",
    "sort-package-json": "^3.6.1",
    "stylelint": "^17.4.0",
    "stylelint-config-hope": "^11.0.0",
    "stylelint-config-html": "^1.1.0",
    "tsconfig-vuepress": "^7.0.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vite": "~7.1.12",
    "vitest": "4.0.18",
    "vuepress": "catalog:"
  },
  "packageManager": "pnpm@10.30.2",
  "engines": {
    "node": "^20.19.0 || >= 22.12.0"
  }
}
